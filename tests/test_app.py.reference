
from fastapi.testclient import TestClient
from app import app as fastapi_app

client = TestClient(fastapi_app)

def test_health():
    r = client.get("/health")
    assert r.status_code == 200
    assert r.json() == {"status": "ok"}

def test_transaction_basic():
    payload = {
        "transaction_id": 1,
        "amount_mxn": 5200.0,
        "customer_txn_30d": 1,
        "geo_state": "Nuevo Le√≥n",
        "device_type": "mobile",
        "chargeback_count": 0,
        "hour": 23,
        "product_type": "digital",
        "latency_ms": 180,
        "user_reputation": "new",
        "device_fingerprint_risk": "low",
        "ip_risk": "medium",
        "email_risk": "new_domain",
        "bin_country": "MX",
        "ip_country": "MX"
    }
    r = client.post("/transaction", json=payload)
    assert r.status_code == 200
    body = r.json()
    assert body["transaction_id"] == 1
    assert body["decision"] in ("ACCEPTED", "IN_REVIEW", "REJECTED")
